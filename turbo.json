{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**" , ".dist/**"]
    },
    "lint": {},
    "prebuild" : {
      "cache": false
    },
    "dev": {
      "env": ["API_PORT"],
      "cache": false,
      "persistent": true
    },
    "typeorm-run-migrations" : {},
    "typeorm-revert-migrations" : {}
  }
}
